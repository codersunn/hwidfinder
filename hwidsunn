#!/bin/bash

# Display the header
echo "============================="
echo "    HWID Finder by Codersunn  "
echo "============================="

# Get the HWID (for macOS)
HWID=$(ioreg -l | grep IOPlatformUUID | awk '{print $3}')

# Display the HWID in a highlighted square
echo "┌─────────────────────────────┐"
echo "│         Your HWID:         │"
echo "│         $HWID              │"
echo "└─────────────────────────────┘"
