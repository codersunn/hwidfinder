#!/bin/bash

# Display the header
echo "============================="
echo "    HWID Finder by noplaysunn  "
echo "============================="

# Get the HWID (for macOS)
HWID=$(system_profiler SPHardwareDataType | awk '/UUID/ {print $3}')

# Display the HWID in a highlighted square
echo "┌─────────────────────────────┐"
echo "│         Your HWID:         │"
echo "│         $HWID              │"
echo "└─────────────────────────────┘"
